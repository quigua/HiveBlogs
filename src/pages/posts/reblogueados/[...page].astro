---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import PostCard from '../../../components/PostCard.astro';
import { POST_SETTINGS } from '../../../config/site';

export async function getStaticPaths({ paginate }) {
  // Aquí filtrarías los posts que son reblogueados
  const allPosts = await getCollection('blog'); // Asumiendo que tienes una forma de distinguirlos
  const rebloggedPosts = allPosts.filter(post => post.data.isReblogged); // Ejemplo
  
  return paginate(rebloggedPosts, { pageSize: POST_SETTINGS.postsPerPage });
}

const { page } = Astro.props;
---

<Layout title="Posts Reblogueados">
  <div class="container">
    <h1>Posts Reblogueados</h1>
    <div class="posts-grid">
      {page.data.map(post => (
        <PostCard post={post} />
      ))}
    </div>

    <!-- Paginación -->
    <div class="pagination">
      {page.url.prev && <a href={page.url.prev}>&laquo; Anterior</a>}
      <span>Página {page.currentPage} de {page.lastPage}</span>
      {page.url.next && <a href={page.url.next}>Siguiente &raquo;</a>}
    </div>
  </div>
</Layout>