---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import PostCard from '../../../components/PostCard.astro';
import { POST_SETTINGS } from '../../../config/site';

export async function getStaticPaths({ paginate }) {
  const allPosts = await getCollection('blog');
  const sortedPosts = allPosts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
  
  return paginate(sortedPosts, { pageSize: POST_SETTINGS.postsPerPage });
}

const { page } = Astro.props;
---

<Layout title="Posts Originales">
  <div class="container">
    <h1>Posts Originales</h1>
    <div class="posts-grid">
      {page.data.map(post => (
        <PostCard post={post} />
      ))}
    </div>

    <!-- Paginación -->
    <div class="pagination">
      {page.url.prev && <a href={page.url.prev}>&laquo; Anterior</a>}
      <span>Página {page.currentPage} de {page.lastPage}</span>
      {page.url.next && <a href={page.url.next}>Siguiente &raquo;</a>}
    </div>
  </div>
</Layout>