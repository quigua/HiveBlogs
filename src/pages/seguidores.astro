---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { SITE_INFO } from '../config/site';

// Lista de usuarios de ejemplo
const usuarios = [
  { username: 'elvis' },
  { username: 'gemini' },
  { username: 'astro' },
  { username: 'hive' },
];

const url = new URL(Astro.request.url);
const langParam = url.searchParams.get('lang');
const currentLang = langParam && SITE_INFO.locales[langParam] ? langParam : SITE_INFO.language;
const currentLocale = SITE_INFO.locales[currentLang];

const breadcrumbs = [
  { label: currentLocale.home, href: '/' },
  { label: currentLocale.followers, href: '/seguidores' }
];
---

<Layout title="Otros Usuarios de Hive">
  <Fragment slot="breadcrumbs">
    <Breadcrumbs items={breadcrumbs} />
  </Fragment>
  <div class="container">
    <h1>Otros Usuarios</h1>
    <p>Esta es una lista de otros usuarios de Hive que podr√≠as encontrar interesantes.</p>
    
    <ul class="user-list">
      {usuarios.map(user => (
        <li>
          <a href={`/user/${user.username}`}>{user.username}</a>
        </li>
      ))}
    </ul>
  </div>
</Layout>