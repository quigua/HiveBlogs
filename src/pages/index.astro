---
import Layout from '../layouts/Layout.astro'; // Asegúrate de que importa el Layout general
import Hero from '../components/Hero.astro';
import PostCard from '../components/PostCard.astro';
// NO DEBE HABER NINGUNA IMPORTACIÓN DE CSS AQUÍ
---

<Layout title="Inicio - HiveBlogs"> {/* Usa Layout.astro y le pasa el título */}
  <Hero />

  <section class="content-section">
    <div class="container">
      <div class="main-column">
        <h2>Últimos Posts</h2>
        <div class="posts-grid">
          <PostCard
            title="Mi Primer Post en Hive"
            date="25 de Jun, 2025"
            author="quigua"
            imageUrl="/images/placeholder-1.jpg"
            excerpt="Un breve extracto de lo que trata este primer post, hablando de la experiencia inicial en Hive."
            category="Introducción"
            tags={['hive', 'blogging', 'primer-post']}
            reads={125}
            votes={50}
            hbdPayout="5.23 HBD"
            comments={10}
            slug="mi-primer-post"
          />
          <PostCard
            title="Diseño Web con Astro y CSS Moderno"
            date="24 de Jun, 2025"
            author="elvis"
            imageUrl="/images/placeholder-2.jpg"
            excerpt="Explorando las bondades de Astro para construir sitios web rápidos y cómo manejar el CSS."
            category="Desarrollo Web"
            tags={['astro', 'css', 'frontend']}
            reads={230}
            votes={85}
            hbdPayout="12.75 HBD"
            comments={22}
            slug="diseno-web-con-astro"
          />
